@model ProductViewModel
<h3>Add new product</h3>
<form asp-action="AddProduct" asp-controller="Product" method="post">
    <div class="container">
        <div class="form-group">
            <label>Product Name:</label>
            @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Name)
        </div>

        <div class="form-group">
            <label>Url:</label>
            @Html.TextBoxFor(x => x.Url, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <label>Image:</label>
            @Html.TextBoxFor(x => x.Image, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Image)
        </div>

        <div class="form-group">
            <label>Category: </label>
            <select class="form-control form-control-sm" asp-for="Category" asp-items="Model.Categories">
                <option Value="0">None</option>
            </select>
        </div>

        <div class="form-group">
            <label>Description:</label>
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @rows = "10" })
            @Html.ValidationMessageFor(x => x.Description)
        </div>

        <div class="form-group">
            <label>Price:</label>
            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Upload</button>
            <a type="reset" class="btn btn-danger" href="javascript:history.go(-1)">Back</a>
        </div>

    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
