@{
    ViewData["Title"] = "Home Page";
}
@model IEnumerable<ProductViewModel>
<div class="text-center">
    <h1 class="display-4">Welcome to MyShop!</h1>
    <p>Happy shopping spree!</p>
    <hr />
</div>

<div class="row">
    @foreach (var item in Model)
     {
        <div class="card text-center" style="width: 18rem; margin: 20px 10px 50px 10px;">
            <img class="card-img-top img-responsive img-resize" src="@Html.Raw(item.Image)" alt="Card image cap" style="width: 100%; max-width: 400px; height: 280px;">
            <div class="card-body">
                <h5 class="card-title">@item.Name</h5>
                <a asp-controller="Product" asp-action="EditProduct" asp-route-id="@item.Id" type="submit" class="btn btn-secondary">Edit</a>
                <a asp-controller="Product" asp-action="GetProductById" asp-route-id="@item.Id" type="submit" class="btn btn-primary">Learn More</a>
                <a asp-controller="Product" asp-action="DeleteProductById" asp-route-id="@item.Id" type="submit" class="btn btn-danger">Delete</a>
            </div>
        </div>
     }
    <div class="card text-center" style="width: 18rem; margin: 20px 10px 50px 10px;">
        <img class="card-img-top img-responsive img-resize" src="https://media.istockphoto.com/vectors/black-plus-sign-positive-symbol-vector-id688550958?k=6&m=688550958&s=612x612&w=0&h=nVa-a5Fb79Dgmqk3F00kop9kF4CXFpF4kh7vr91ERGk=" style="width: 100%; max-width: 400px; height: 280px;" alt="add image">
        <div class="card-body">
            <h5 class="card-title">Add your product</h5>
            <a asp-controller="Product" asp-action="AddProduct" type="submit" class="btn btn-primary">Add new product</a>
        </div>
    </div>
</div>
